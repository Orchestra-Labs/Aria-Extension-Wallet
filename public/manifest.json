{
  "name": "Aria Wallet",
  "description": "Crypto wallet built for the Cosmos ecosystem.",
  "version": "2.2.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Aria"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background-script.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "permissions": [
    "clipboardWrite"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "injected-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
