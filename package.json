{
  "name": "aria-wallet",
  "private": true,
  "version": "2.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "check-types": "tsc",
    "prepare-zip": "yarn build && rm -f aria-wallet.zip && zip -r aria-wallet.zip dist/",
    "reinstall": "rm -rf node_modules yarn.lock && yarn install",
    "version:show": "node -e \"console.log(require('./package.json').version)\"",
    "set-version": "NODE_OPTIONS='--loader ts-node/esm' ts-node src/scripts/set-version.ts",
    "version:set": "yarn set-version",
    "version:major": "yarn set-version major",
    "version:minor": "yarn set-version minor",
    "version:fix": "yarn set-version fix",
    "build:standard": "tsc && vite build && vite build --config vite.content-script.config.ts && npx vite build --config vite.background-script.config.ts && npx vite build --config vite.injected-script.config.ts",
    "build:tsc": "tsc --noEmit",
    "build:main": "NODE_OPTIONS=\"--max-old-space-size=4096\" vite build",
    "build:content": "NODE_OPTIONS=\"--max-old-space-size=2048\" vite build --config vite.content-script.config.ts",
    "build:background": "NODE_OPTIONS=\"--max-old-space-size=2048\" vite build --config vite.background-script.config.ts",
    "build:injected": "NODE_OPTIONS=\"--max-old-space-size=2048\" vite build --config vite.injected-script.config.ts",
    "build:step-by-step": "yarn build:tsc && yarn build:main; yarn build:content; yarn build:background; yarn build:injected",
    "build": "yarn build:step-by-step"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.33.1",
    "@cosmjs/encoding": "^0.33.1",
    "@cosmjs/stargate": "^0.33.1",
    "@json-rpc-tools/utils": "^1.7.6",
    "@orchestra-labs/symphonyjs": "^1.0.29",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-dialog": "~1.0.5",
    "@radix-ui/react-scroll-area": "~1.0.5",
    "@radix-ui/react-select": "~2.0.0",
    "@radix-ui/react-slot": "~1.0.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@reown/walletkit": "^1.2.3",
    "@skip-go/client": "^1.5.4",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/web3.js": "^1.98.4",
    "@tanstack/react-query": "^5.52.1",
