    "eslint-plugin-react": "~7.34.1",
    "eslint-plugin-react-hooks": "~4.6.0",
    "eslint-plugin-react-refresh": "~0.4.6",
    "eslint-plugin-simple-import-sort": "~12.0.0",
    "eslint-plugin-unused-imports": "~3.1.0",
    "prettier": "~3.2.5",
    "ts-node": "^10.9.2"
  },
  "resolutions": {
