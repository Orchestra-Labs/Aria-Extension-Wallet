    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-qr-barcode-scanner": "^2.0.0",
    "react-router-dom": "~6.22.3",
    "react-spring": "^9.7.4",
    "react-use": "^17.6.0",
    "react-use-gesture": "^9.1.3",
    "swiper": "^11.1.14",
    "tailwind-merge": "~2.2.2",
    "tailwindcss": "~3.4.3",
    "typescript": "~5.2.2",
    "uuid": "^11.0.2",
    "viem": "^2.36.0",
    "vite": "~5.2.0",
    "vite-tsconfig-paths": "~4.3.2"
  },
