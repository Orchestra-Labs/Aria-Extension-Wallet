    "@types/react": "~18.2.66",
    "@types/react-dom": "~18.2.22",
    "@use-gesture/react": "^10.3.1",
    "@vitejs/plugin-react": "~4.2.1",
    "@walletconnect/core": "^2.19.2",
    "@zxing/browser": "^0.1.5",
    "autoprefixer": "~10.4.19",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.1.2",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "~0.7.0",
    "clsx": "~2.1.0",
    "crypto-js": "^4.2.0",
    "ethers": "^6.15.0",
    "fflate": "^0.8.2",
    "framer-motion": "^11.11.10",
    "html5-qrcode": "^2.3.8",
    "jotai": "^2.10.0",
    "lucide-react": "~0.367.0",
    "mic-check": "^1.1.0",
    "osmojs": "^16.15.0",
    "postcss": "~8.4.38",
    "protobufjs": "^7.5.4",
